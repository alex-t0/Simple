{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build (gcc/g++)",
            "type": "shell",
            "command": "g++",
            "args": ["-g", "-O0", "${file}", "-o", "${workspaceFolder}/build/gcc/${fileBasenameNoExtension}"],
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "build (clang/clang++)",
            "type": "shell",
            "command": "clang++",
            "args": ["-g", "-O0", "${file}", "-o", "${workspaceFolder}/build/clang/${fileBasenameNoExtension}.exe"],
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "build (msvc)",
            "type": "shell",
            "command": "cl.exe",
            "args": ["/Zi", "/EHsc", "/Fe:${workspaceFolder}/build/ms/${fileBasenameNoExtension}.exe", "${file}"],
            "group": "build",
            // "problemMatcher": ["$msvc"],
            "problemMatcher": ["$msCompile"],
        }
    ]
}